          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "index.php"
          ],
          "query": [
            {
              "key": "route",
              "value": "api/cart/add"
            },
            {
              "key": "api_token",
              "value": "{{api_token}}"
            }
          ]
        },
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            {
              "key": "product_id",
              "value": "{{product_id}}",
              "type": "text"
            },
            {
              "key": "quantity",
              "value": "1",
              "type": "text"
            }
          ]
        },
        "description": "Add product to cart using api_token from Login. Set a valid product_id from your store."
